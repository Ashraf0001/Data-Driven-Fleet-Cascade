# Fleet Decision Platform - Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# Kaggle API (for downloading datasets)
# =============================================================================
# Get your API token from: https://www.kaggle.com/settings
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL (Phase 2+)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=fleet_db
POSTGRES_USER=fleet_user
POSTGRES_PASSWORD=your_secure_password

# Redis (Phase 2+ for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# Vector Storage (Phase 3+)
# =============================================================================
# Pinecone for contract intelligence
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=fleet-contracts

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_RELOAD=true

# =============================================================================
# Logging
# =============================================================================
# Level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Format: "text" for development, "json" for production
LOG_FORMAT=text

# =============================================================================
# Model Configuration
# =============================================================================
# Random seed for reproducibility
RANDOM_SEED=42

# =============================================================================
# Feature Flags (for progressive rollout)
# =============================================================================
ENABLE_CACHING=true
ENABLE_RISK_SCORING=true
ENABLE_EXPLAINABILITY=false
